        <!-- Header -->
        {{>header}}

    <p class="w3-xlarge" align="center">HOW ARE YOU FEELING TODAY?</p>

    <!-- CONTENT-->
    <div class="w3-container">
      <div class="w3-cell-row">
        <div class="w3-cell-middle">
          <a href="/prompt2?tag1=happy"> <button id='happy' class="w3-btn w3-round-xlarge
                        w3-border w3-border-blue">
              <h8>HAPPY</h8>
            </button></a>
        </div>
      </div>

      <div class="w3-cell-row">
        <div class=" w3-cell-middle">
          <a href="/prompt2?tag1=sad"> <button id='sad' class="w3-btn w3-round-xlarge
