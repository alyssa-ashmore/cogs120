<script>
  $('#tag2').hide();
  $('#submit').hide();


  function show() {
    $('#tag2').show();
    $('#plus').hide();
    $('#submit').show();
  }

  $(document).ready(function() {
    $("#submit").click(function() {
      var tag2 = $("#tag2").val();
      if (tag2 === "") {
        alert("Must enter a tag");
      }
      window.location.href = "/bnewentry?tag2=" + tag2 + '&tag1=' + getParameterByName('tag1');
      console.log(tag2);
      return false;
    });
  });

  function goBack() {
    window.history.back();
  }

  function getParameterByName(name, url) {
    if (!url) url = window.location.href;
    name = name.replace(/[\[\]]/g, '\\$&');
    var regex = new RegExp('[?&]' + name + '(=([^&#]*)|&|#|$)'),
      results = regex.exec(url);
    if (!results) return null;
    if (!results[2]) return '';
    return decodeURIComponent(results[2].replace(/\+/g, ' '));
  }
