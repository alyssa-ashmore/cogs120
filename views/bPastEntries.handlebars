<body class="w3-light-grey; w3-padding-16">

  <div class=" w3-content w3-white center w3-center w3-padding" style="width:90%; height:92vh; max-height:650px; max-width:800px">


    <!-- Header -->
    {{>bheader}}

    <!-- CONTENT-->
    <div class="w3-container">
      <p class="title w3-margin" id="sort">Past Entries</p>

      <div class="w3-bar w3-grey">
        <button type="button mx-auto" class="w3-button hovercolor w3-bar-item w3-border w3-border-grey" id="dateBtn"> Sort: Date</button>
        <button type="button mx-auto" class="w3-button hovercolor w3-bar-item w3-border w3-border-grey" id="tagBtn"> Sort: Tags</button>
      </div>
      
      <div class="sortbox" id="sortentrydates">{{>bdates}}</div>
      <div class="sortbox" id="sortentrytags">{{>btags}}</div>
    </div>


  </div>

</html>

<script>

var sort;
$(document).ready(function(){
  $('#sortentrytags').hide();
  // $('#sortentrydates').show();
  $("#dateBtn").click(function(){
    sort = "Date";
    console.log(sort);
    document.getElementById("sort").innerHTML = "Past Entries by " + sort ;
    $('#sortentrydates').show();
    $('#sortentrytags').hide();
    });

  $("#tagBtn").click(function(){
    sort = "Tags";
    console.log(sort);
    document.getElementById("sort").innerHTML = "Past Entries by " + sort ;
    $('#sortentrydates').hide();
    $('#sortentrytags').show();
    console.log("gtag");
    ga("send", "event", 'tagsview', 'click');
  });
});




</script>
