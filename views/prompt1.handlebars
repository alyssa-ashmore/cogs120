<script>
  $('#tag1').hide();
  $('#submit').hide();


  function show() {
    $('#tag1').show();
    $('#plus').hide();
    $('#submit').show();
  }

  $(document).ready(function() {
    $("#doLogin").click(function() {
      var tag1 = $("#tag1").val();
      console.log(tag1);
      if (tag1 === "") {
        alert("Must enter a tag");
      }
      localStorage.setItem("tag1", tag1);
    });
  });

  $(document).ready(function() {
    $("div[data-includeHTML]").each(function() {
      $(this).load($(this).attr("data-includeHTML"));
    });
  });
</script>

